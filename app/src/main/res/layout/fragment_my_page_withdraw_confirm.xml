<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_title_withdraw_confirm"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorNavy"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back_from_withdraw_confirm"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorNavy"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="133dp"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:text="출금하기"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_check_withdraw_confirm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            app:srcCompat="@drawable/green_check" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:textSize="25sp"
            android:textColor="#000000"
            android:letterSpacing="0.05"
            android:gravity="center_horizontal"
            android:text="출금신청이\n완료되었습니다." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14.5dp">

                <TextView
                    android:id="@+id/txt_cash_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"
                    android:text="2018.07.13" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txt_cash_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출금대기"
                    android:textColor="@color/colorNavy" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_cash_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350,000"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="원"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorNavy" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btn_relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_withdraw_confirm"
                android:layout_width="332dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@color/colorNavy"
                android:text="출금하기"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>