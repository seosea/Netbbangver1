<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_title_withdraw"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorNavy"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back_from_withdraw"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorNavy"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="133dp"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:text="출금하기"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_cash_withdraw"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@color/colorNavy"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="등록계좌"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="우리 ****1234567890"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="보유금액"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_total_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="출금가능금액"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_withdrawable_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>


    </LinearLayout>


    <EditText
        android:id="@+id/edit_txt_withdraw_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="45dp"
        android:hint="금액을 입력해주세요."
        android:inputType="number"
        android:maxLength="25"
        android:singleLine="true"
        android:textColorHint="#d2d2d2"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액 "
            android:textColor="#565656"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_input_number_for_koreans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영"
            android:textColor="#565656"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원정"
            android:textColor="#565656"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btn_relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:gravity="bottom"
                android:text="계정 정보 변경하기" />

            <Button
                android:id="@+id/btn_withdraw_cash"
                android:layout_width="332dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginBottom="19dp"
                android:background="@color/colorNavy"
                android:text="출금하기"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>


    </RelativeLayout>



</LinearLayout>